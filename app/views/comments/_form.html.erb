<%= form_with(model: comment, local: true) do |form| %>

  <div class="field">
    <%= form.label :Comment, class: "label" %>
    <%= form.text_area :body, class: "textarea", rows: "2" %>
  </div>
  <%= form.hidden_field :post_id, value: post_id %>

  <div class="actions">
    <%= form.submit "Submit", class: "button" %>
  </div>
<% end %>

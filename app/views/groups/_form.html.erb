<%= form_with(model: group, local: true) do |form| %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class: "input" %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, class: "textarea" %>
  </div>

  <div class="actions">
    <%= form.submit "Submit", class: "button" %>
  </div>
<% end %>
